{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "wporg/query-total",
	"title": "Query Total",
	"icon": "chart-area",
	"category": "layout",
	"description": "Display the total items found in the current query.",
	"textdomain": "wporg",
	"attributes": {
		"textColor": {
			"type": "string",
			"default": "charcoal-4"
		},
		"fontSize": {
			"type": "string",
			"default": "small"
		}
	},
	"supports": {
		"align": true,
		"color": {
			"text": true,
			"background": true,
			"link": false
		},
		"spacing": {
			"margin": true,
			"padding": true
		},
		"typography": {
			"fontSize": true
		}
	},
	"usesContext": [ "queryId", "query" ],
	"editorScript": "file:./index.js"
}
