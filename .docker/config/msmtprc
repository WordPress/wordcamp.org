# Set default values for all following accounts.
defaults
auth off
tls off
tls_trust_file /etc/ssl/certs/ca-certificates.crt
syslog on
aliases /etc/aliases

# MailCatcher account
account mailcatcher

# MailCatcher host
host 127.0.0.1
port 1025
from username@example.com
user username
password password

# Set a default account
account default : mailcatcher
