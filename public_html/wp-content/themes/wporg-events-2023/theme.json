{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"settings": {
		"custom": {
			"heading": {
				"level-1": {
					"breakpoint": {
						"small-only": {
							"typography": {
								"fontSize": "30px"
							}
						}
					}
				}
			},
			"button": {
				"typography": {
					"lineHeight": "16px"
				},
				"spacing": {
					"padding": {
						"top": "17px",
						"right": "32px",
						"bottom": "17px",
						"left": "32px"
					}
				}
			}
		},

		"typography": {
			"fontSizes": [
				{
					"name": "Heading 1",
					"size": "clamp( 30px, 4vw, 50px )",
					"slug": "heading-1"
				}
			]
		}
	}
}
